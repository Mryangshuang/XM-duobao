<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="1000"
    android:fillAfter="true" >
<!-- 透明度 -->
    <alpha
        android:fromAlpha="2"
        android:toAlpha="1" />
<!-- 缩放 -->
    <scale
        android:fromXScale="2"
        android:fromYScale="2"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="1"
        android:toYScale="1" />

</set>