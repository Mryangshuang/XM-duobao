<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#22000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#ffffff"
         >

        <TextView
            android:padding="20dp"
            android:id="@+id/tv_duobao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:background="#ff0000"
            android:gravity="center_horizontal"
            android:text="立即夺宝"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_duobao"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="共 5元" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_above="@id/tv_total_money"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#33000000" />

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:id="@+id/linearlayout1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/view"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_five"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_addorminus"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="5" />

            <TextView
                android:id="@+id/tv_twenty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_addorminus"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="20" />

            <TextView
                android:id="@+id/tv_fifty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_addorminus"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="50" />

            <TextView
                android:id="@+id/tv_hundred"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.1"
                android:background="@drawable/shape_addorminus"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="100" />
        </LinearLayout>

        <LinearLayout
               android:layout_centerHorizontal="true"
            android:id="@+id/linearlayout2"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_above="@id/linearlayout1"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_addorminus"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/minus_window"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/selector_clickaddminus"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/ic_number_picker_minus" />

            <EditText
                android:id="@+id/et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:background="@null"
                android:gravity="center_horizontal"
                android:text="5"
                android:textColor="#ff0000" />

            <ImageView
                android:id="@+id/add_window"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/selector_clickaddminus"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/ic_number_picker_add" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/linearlayout2"
            android:gravity="center_vertical"
            android:padding="5dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="参与人次" />

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_gooddetail_close_button" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>